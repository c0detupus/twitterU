<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF33B5E5"
    tools:context="com.afk.twitteru.fragments.LoginFragment">


    <Button
        android:background="#ffffff"
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="156dp"
        android:text="@string/button_login_fragment" />


    <EditText
        android:id="@+id/passwordET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#ffffff"
        android:ems="10"
        android:hint="@string/password_login_fragment"
        android:inputType="textPassword"
        android:password="true" />

    <EditText
        android:id="@+id/userNameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passwordET"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="@string/username_login_fragment"
        android:inputType="textPersonName" />




</RelativeLayout>
